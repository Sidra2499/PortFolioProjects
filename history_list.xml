<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:layout_margin="28dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Order"
        android:text="Order"
        android:gravity="center"
   android:textColor="@android:color/black"
        android:textStyle="bold"

        android:background="@color/fbutton_color_transparent"
        android:textSize="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            android:layout_below="@+id/Order"
            android:text="Name"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:background="@color/fbutton_color_transparent"
            android:textSize="22dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_n"
        android:layout_below="@+id/userName"
        android:text="Phone"
        android:gravity="left"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:background="@color/fbutton_color_transparent"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trainNo"
        android:text="Train_No"
        android:layout_below="@+id/phone_n"
        android:gravity="left"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:background="@color/fbutton_color_transparent"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pnrNo"
        android:text="PNR_No"
        android:layout_below="@id/trainNo"
        android:gravity="left"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:background="@color/fbutton_color_transparent"
        android:textSize="22dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FoodItems"
        android:text="Food Items"
        android:layout_below="@+id/pnrNo"
        android:gravity="left"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:background="@color/fbutton_color_transparent"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TotalBill"
        android:text="TotalBill"
        android:gravity="center"
        android:layout_below="@+id/FoodItems"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:background="@color/fbutton_color_transparent"
        android:textSize="30dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>