<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_margin="20dp">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="24dp"
             android:gravity="center"
             android:textStyle="bold"
             android:text="Order"
             android:id="@+id/order_tv"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/user_no"
             android:layout_below="@+id/order_tv"
             android:text="User No"
             android:textSize="20dp"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/itemNames"
             android:text="Item Names"
             android:layout_below="@+id/user_no"
             android:textSize="20dp"/>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/train_no"
             android:text="Train No"
             android:layout_below="@id/itemNames"
             android:textSize="20dp"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/pnr_no"
             android:text="pnr_no"
             android:layout_below="@id/train_no"
             android:textSize="20dp"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/t_Bill"
             android:text="Total Bill"
             android:layout_below="@id/pnr_no"
             android:textSize="20dp"/>

     </RelativeLayout>
</LinearLayout>